<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/titre_resultats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titre_resultat_activity"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ville_resultats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/resultat_ville"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/temperature_resultats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/resultat_temperature"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/qualite_air_resultats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/resultat_qualite_air"
        android:textSize="18sp" />

</LinearLayout>